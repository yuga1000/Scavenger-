# Ghostline Clean V4.1 - Configuration Template
# Copy this file to .env and fill in your actual values

# ==============================================
# REQUIRED SETTINGS
# ==============================================

# Telegram Bot Configuration (Required)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# ==============================================
# MICROWORKERS CONFIGURATION
# ==============================================

# Microworkers Web Scraping (Recommended)
MICROWORKERS_EMAIL=your_microworkers_email@example.com
MICROWORKERS_PASSWORD=your_microworkers_password

# Microworkers API (Optional - if you have API access)
MICROWORKERS_API_KEY=your_microworkers_api_key

# ==============================================
# OTHER PLATFORMS (Optional)
# ==============================================

# Clickworker API
CLICKWORKER_API_KEY=your_clickworker_api_key


# ==============================================
# BLOCKCHAIN APIs (Optional)
# ==============================================

# Etherscan API
ETHERSCAN_API_KEY=your_etherscan_api_key

# Alchemy API
ALCHEMY_API_KEY=your_alchemy_api_key

# ==============================================
# WITHDRAWAL SETTINGS (Optional)
# ==============================================

# Ethereum withdrawal address
WITHDRAWAL_ADDRESS=0x742d35Cc6663C747049fdB5F3C00F0D3a67d8829
WITHDRAWAL_THRESHOLD=0.01

# ==============================================
# SYSTEM CONFIGURATION
# ==============================================

# Environment
NODE_ENV=production

# Logging
LOG_LEVEL=info
LOG_TO_FILE=true

# Web Scraping
USE_SCRAPING_FALLBACK=true

# Task Settings
SCAN_INTERVAL=300000
MIN_TASK_REWARD=0.001
MAX_CONCURRENT_TASKS=3
API_TIMEOUT=15000
RATE_LIMIT_DELAY=2000

# ==============================================
# NOTES
# ==============================================

# 1. TELEGRAM_BOT_TOKEN: Get from @BotFather on Telegram
# 2. TELEGRAM_CHAT_ID: Send /start to your bot, check logs for chat ID
# 3. MICROWORKERS_EMAIL/PASSWORD: Your Microworkers login credentials
# 4. Web scraping works without API keys
# 5. Set NODE_ENV=development for testing
# 6. All monetary values are in ETH
